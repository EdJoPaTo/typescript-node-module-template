{
	"name": "typescript-node-module-boilerplate",
	"version": "0.0.0",
	"description": "",
	"keywords": [
		""
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/EdJoPaTo/typescript-node-module-boilerplate.git"
	},
	"author": {
		"name": "EdJoPaTo",
		"email": "typescript-node-module-boilerplate-npm-package@edjopato.de",
		"url": "https://edjopato.de"
	},
	"scripts": {
		"build": "del-cli dist && tsc",
		"prepack": "npm run build",
		"test": "tsc --sourceMap && xo && nyc ava"
	},
	"type": "commonjs",
	"engines": {
		"node": ">=14"
	},
	"dependencies": {},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.0",
		"@types/node": "^14.18.20",
		"ava": "^5.0.1",
		"del-cli": "^5.0.0",
		"nyc": "^15.0.0",
		"typescript": "^5.0.2",
		"xo": "^0.53.0"
	},
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"main": "./dist/source/index.js",
	"types": "./dist/source/index.d.ts",
	"nyc": {
		"all": true,
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"rules": {
			"@typescript-eslint/prefer-readonly-parameter-types": "warn",
			"ava/no-ignored-test-files": "off"
		},
		"overrides": [
			{
				"files": [
					"**/*.test.*",
					"test/**/*.*"
				],
				"rules": {
					"@typescript-eslint/prefer-readonly-parameter-types": "off"
				}
			}
		]
	}
}
